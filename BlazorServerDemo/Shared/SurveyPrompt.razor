<div class="alert alert-secondary mt-4" role="alert">
    <span class="oi oi-pencil mr-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        @WMBI.GetTranslation("SurveyText1")
        <a target="_blank" class="font-weight-bold" href="https://go.microsoft.com/fwlink/?linkid=2137916">@WMBI.GetTranslation("SurveyText2")</a>
    </span>
    @WMBI.GetTranslation("SurveyText3")
</div>

@code {
    [CascadingParameter(Name = "CascadeWMBI")]
    protected WMBInternationalization WMBI { get; set; }

    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string Title { get; set; }
}
